<?xml version="1.0" encoding="UTF-8"?>
	<project name="taglib" default="empacotar">
		<property name="build.dir" value="build/taglib" />
	    <target name="limpar">
	        <delete dir="${build.dir}" />
	    </target>

	    <target name="init" depends="limpar">
	        <mkdir dir="${build.dir}" />
	        <mkdir dir="${build.dir}/META-INF/resources/andcnsa" />
	        <copydir src="WebContent/resources/layout" dest="${build.dir}/META-INF/resources/andcnsa" />
	        <copyfile src="WebContent/WEB-INF/andcnsa.taglib.xml" dest="${build.dir}/META-INF/andcnsa.taglib.xml" />
	        <copyfile src="WebContent/WEB-INF/faces-config.xml" dest="${build.dir}/META-INF/faces-config.xml" />
	    </target>

	    <target name="compilar" depends="init">
	        <javac srcdir="src" destdir="${build.dir}">
	        	<classpath>
	                <fileset dir="WebContent/WEB-INF/lib">
	                    <include name="*.jar" />
	                </fileset>
	            </classpath>
	        </javac>
	    </target>

	    <target name="empacotar" depends="compilar">
	        <jar destfile="build/andcnsa-taglib.jar" basedir="${build.dir}" />
	    </target>

	</project>
